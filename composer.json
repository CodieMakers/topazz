{
  "name": "topazz/topazz",
  "description": "Topazz is a multi-micro-site CMS",
  "version": "1.0.0-dev",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/CodieMakers/topazz",
  "keywords": ["topazz", "multisite-network", "microsite", "slim-framework", "psr-7"],
  "authors": [
    {
      "name": "Lukáš Krotovič",
      "email": "lukas@krotovic.cz",
      "homepage": "http://lukas.krotovic.cz",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/CodieMakers/topazz/issues",
    "source": "https://github.com/CodieMakers/topazz/tree/develop"
  },
  "autoload-dev": {
    "psr-4": {
      "Topazz\\Tests\\": "tests/Topazz/Tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "Topazz\\": "src/Topazz/"
    }
  },
  "require": {
    "php": ">=7.0.0",
    "topazz/composer": "^1.0.1",
    "composer/composer": "1.4.*",
    "slim/slim": "^3.8",
    "slim/twig-view": "^2.2",
    "slim/csrf": "^0.8.1",
    "slim/flash": "^0.2.0",
    "slim/http-cache": "0.3.*",
    "monolog/monolog": "^1.22",
    "kanellov/slim-twig-flash": "^0.2.0",
    "symfony/dotenv": "v3.3.0-RC1",
    "symfony/filesystem": "3.2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "6.1.*",
    "phpunit/php-code-coverage": "5.2.*"
  },
  "provide": {
    "topazz/admin": "*"
  }
}
